@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>

<div class="card-body">
    <form method="POST" action="@Url.Action("Update", "Category", new { id = Model.CategoryId })">
        <input type="text" style="display:none;" name="CategoryId" value="@Model.CategoryId" />
        <div class="form-group">
            <label>Category Name:</label> <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" />
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a href="@Url.Action("Find", "Category", new { id = Model.CategoryId })" class="btn btn-secondary">Cancel</a>
        </div>

    </form>
</div>
