﻿@model MyPassionProject.Models.CategoryDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div>
    <nav>
        <a class="navlink" href="/Category/Find/@Model.CategoryId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete this Category?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Category/Delete/@Model.CategoryId">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>
</div>