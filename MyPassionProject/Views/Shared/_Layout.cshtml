<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Community Booster</title>
    @Styles.Render("~/Content/css")
    @*<link href="~/CSS/theme.css" rel="stylesheet" />*@
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/index.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm data-bs-theme=dark bg-custom">
        <div class="container">
            @Html.ActionLink("Community Booster", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Account", "Account", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = "nav-link" })</li>
                    @* <li>@Html.ActionLink("Events", "List", "Event", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Categories", "List", "Category", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Users", "List", "AppUser", new { area = "" }, new { @class = "nav-link" })</li>*@
                </ul>
                <nav class="navbar bg-body-tertiary">
                    <div class="container-fluid">
                        <form class="d-flex" role="search" action="@Url.Action("Search","Home")" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query" >
                            <button class="btn btn-outline-success" type="submit" >Search</button>
                        </form>
                    </div>
                </nav>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
     
        <footer style="position: fixed; bottom: 0; width: 100%;">
            <p>&copy; @DateTime.Now.Year - Community Booster</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
